.HotName {
  font-size: 80rpx;
  margin-left: 40rpx;
  color: #293539;
  position: relative;
}

.HotName text {
  width: 14rpx;
  height: 14rpx;
  position: absolute;
  border: 4rpx solid #a78845;
  border-radius: 50%;
}

.HotMark {
  margin-left: 50rpx;
  color: #293539;
  font-size: 36rpx;
  margin-top: 10rpx;
  font-weight: 300;
}

.HotSwiper swiper {
  width: 100%;
  height: 80vh;
}

.swiper-box {
  width: 520rpx;
  margin: 0 auto;
  position: relative;
  height: 740rpx;
  box-shadow: 0 10rpx 30rpx 0 #cfc9ca;
  margin-top: 40rpx;
  border-radius: 20rpx;
}

.swiper-box image {
  width: 100%;
  height: 520rpx;
  background-color: #f5f5f5;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}

.swiper-box-info {
  position: absolute;
  width: 100%;
  height: 220rpx;
  top: 520rpx;
  background-color: #fff;
  border-bottom-right-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
}

.swiper-box-info .box-info-name {
  width: 90%;
  margin: 0 auto;
  margin-top: 10rpx;
  font-size: 32rpx;
  color: #293539;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.swiper-box-info .box-info-money {
  float: left;
  margin-top: 80rpx;
  margin-left: 30rpx;
  font-size: 38rpx;
  color: #a78845;
}

.swiper-box-info .box-coupons-btn {
  float: right;
  margin-top: 70rpx;
  background-color: #f5f5f5;
  color: #6a7275;
  font-size: 28rpx;
  font-weight: 300;
  width: 180rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  margin-right: 30rpx;
  border-radius: 6rpx;
}

.swiper-box-info .box-info-money text {
  font-size: 30rpx;
  padding-right: 6rpx;
}

.box-info-icon-box {
  float: right;
  margin-right: 20rpx;
  margin-top: 60rpx;
}

.box-info-icon-box .box-info-icon {
  display: inline-block;
  width: 80rpx;
  height: 80rpx;
  background-color: #f5f5f5;
  margin-left: 20rpx;
  border-radius: 50%;
  text-align: center;
}

.box-info-icon-box .box-info-icon image {
  width: 50rpx;
  height: 50rpx;
  background-color: rgba(0, 0, 0, 0);
  margin-top: 16rpx;
}
